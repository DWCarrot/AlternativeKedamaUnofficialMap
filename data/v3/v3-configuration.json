{
  "world": "v3",
  "default": true,
  "crs": {
    "class": "L.AKM.CRS",
    "args": [
      {
        "scale": 0.5,
        "offset": [0, 0],
        "maxZoom": 4
      }
    ]
  },
  "baselayer": {
    "class": "L.TileLayer",
    "args": [
      "../data/v3/{z}/{x},{y}.png",
      {
        "tileSize": 512,
        "maxZoom": 4,
        "attribution": "&copy; 2018-2019 <a href=\"https://www.craft.moe\">Kedama-Koiru Monogatari</a>"
      }
    ]
  },
  "overlayers": {
    "map-marker": {
      "class": "L.AKM.MarkerControlLayer",
      "autoshow": true,
      "args": [
        "../data/v3/v3-markers.json",
        {
          "searchUI": "$SEARCH_UI",
          "editUI": "$EDIT_UI",
          "pushOperation": "$PUSH_OP"
        }
      ]
    },
    "chunk-mark": {
      "class": "L.KC.ShowVertex",
      "autoshow": false,
      "args": [
        "../tools/data.json",
        {}
      ]
    }
  }
}

